include @TGTDIR@/Makedefs

SRCS =  pr_info.c \
	pr_warp.c \
	pr_warp.h \
	pr_warp_config.c \
	pr_warp_network.c \
	pr_warp_packet.c \
	wa_config.c \
	wa_main.c \
	wa_request.c

OBJS =  wa_main.lo \
	wa_config.lo \
	wa_request.lo

PROVS = pr_info.lo \
	pr_warp.lo \
	pr_warp_packet.lo \
	pr_warp_network.lo \
	pr_warp_config.lo

LIB =	$(TGTDIR)/lib/libwebapp.a

WARPH = pr_warp_defs.h

build: $(LIB)

clean:
	@for ENTRY in *.o *.lo $(LIB) $(WARPH) .libs ; \
	do \
		if $(TEST) -d $${ENTRY} ; \
		then \
			$(ECHO) Removing directory $${ENTRY} ; \
			$(RM) -rf $${ENTRY} ; \
		else \
			$(ECHO) Removing file $${ENTRY} ; \
			$(RM) -f $${ENTRY} ; \
		fi ; \
	done

$(LIB): libwebapp.la
	$(LIBTOOL) --silent --mode=install \
	$(SRCDIR)/support/install.sh -c \
	libwebapp.la \
	$(TGTDIR)/lib
	$(LIBTOOL) --silent --mode=finish \
	$(TGTDIR)/lib

libwebapp.la: $(SRCS) $(WARPH) $(OBJS) $(PROVS)
	@$(MECHO) "Creating library \"$@\""
	$(LIBTOOL) $(CC) -rpath $(TGTDIR)/lib -static -o $@ $(OBJS) $(PROVS)

pr_warp_defs.h: $(TGTDIR)/java/Constants.java
	@$(MECHO) "Generating \"$@\" from \"$?\""
	@$(CAT) "$?" | \
	    $(GREP) "TYPE_" | \
	    $(SED) "s/public static final int/#define/g" | \
	    $(SED) "y/=;/  /" > $@

$(SRCS):
	$(LN) -s $(SRCDIR)/lib/$@ ./$@
	@$(ECHO) $(TGTDIR)/lib/$@ >> $(LSTFILE)

